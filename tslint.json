{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "rules": {
    "class-name": true,
    "curly": true,
    "indent": [
      true,
      "spaces",
      4
    ],
    "no-duplicate-variable": true,
    "no-empty-interface": false,
    "no-string-throw": true,
    "no-unused-expression": true,
    "variable-name": [true, "allow-leading-underscore"],
    "no-empty": false,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": true
  }
}